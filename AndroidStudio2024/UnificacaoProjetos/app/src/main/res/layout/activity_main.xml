<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/_1eda8e4_b15a_4530_b24f_59fe1dc03c18"
    android:visibility="visible"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/layoutConstraint"
        android:layout_width="206dp"
        android:layout_height="86dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#FFFFFF"
        android:backgroundTintMode="add"
        android:text="Constraint Layout "
        android:textColor="#050505"
        android:textSize="19sp"
        android:textStyle="bold"
        app:cornerRadius="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/layoutMelhorTexto"
        android:layout_width="206dp"
        android:layout_height="86dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="56dp"
        android:backgroundTint="#FBFAFA"
        android:backgroundTintMode="add"
        android:text="Melhor Texto"
        android:textColor="#040404"
        android:textSize="19sp"
        android:textStyle="bold"
        app:cornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="@+id/layoutNetflix"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/layoutNetflix"
        app:layout_constraintTop_toBottomOf="@+id/layoutNetflix" />

    <Button
        android:id="@+id/layoutNetflix"
        android:layout_width="206dp"
        android:layout_height="86dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="64dp"
        android:backgroundTint="#FFFDFD"
        android:backgroundTintMode="add"
        android:text="Netflix"
        android:textColor="#000000"
        android:textSize="19sp"
        android:textStyle="bold"
        app:cornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="@+id/layoutConstraint"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/layoutConstraint"
        app:layout_constraintTop_toBottomOf="@+id/layoutConstraint" />

</androidx.constraintlayout.widget.ConstraintLayout>