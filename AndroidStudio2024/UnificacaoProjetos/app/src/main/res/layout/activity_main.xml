<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#474747"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/layoutMelhorTexto"
        android:layout_width="115dp"
        android:layout_height="80dp"
        android:backgroundTint="#FBFAFA"
        android:backgroundTintMode="add"
        android:text="Melhor Texto"
        android:textColor="#040404"
        app:cornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/layoutNetflix"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/layoutNetflix"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/layoutNetflix"
        android:layout_width="115dp"
        android:layout_height="80dp"
        android:backgroundTint="#FFFDFD"
        android:backgroundTintMode="add"
        android:text="Netflix"
        android:textColor="#000000"
        app:cornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/layoutConstraint"
        app:layout_constraintTop_toTopOf="@+id/layoutConstraint"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="148dp" />

    <Button
        android:id="@+id/layoutConstraint"
        android:layout_width="115dp"
        android:layout_height="80dp"
        android:layout_marginStart="4dp"
        android:backgroundTint="#FFFFFF"
        android:backgroundTintMode="add"
        android:text="Constraint Layout "
        android:textColor="#050505"
        app:cornerRadius="5dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="82dp" />

</androidx.constraintlayout.widget.ConstraintLayout>